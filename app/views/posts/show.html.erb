<div class ="contents row">
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/posts/#{@post.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/posts/#{@post.id}", method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="name"><%= @post.name %></div>
  <div class="location"><%= @post.location %></div>
  <div class="image"><%= @post.image %></div>
  <span class="name">
    <a href="/users/<%= @post.user.id %>">
      <span>投稿者</span><%= @post.user.name %>
    </a>  
  </span>
    <div class="container">
    <% if current_user %>
      <%= form_with(model: [@post, @kuchikomi], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ 口コミの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>

    <div class="kuchikomis">
      <h4>＜口コミ一覧＞</h4>
      <% if @kuchikomis %>
        <% @kuchikomis.each do |kuchikomi| %>
          <p>
            <strong><%= link_to kuchikomi.user.name, "/users/#{kuchikomi.user_id}" %>：</strong>
            <%= kuchikomi.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>