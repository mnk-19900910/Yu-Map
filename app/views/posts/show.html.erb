<div class ="contents row">
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/posts/#{@post.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/posts/#{@post.id}", method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="name">温泉名：<%= @post.name %></div>
  <div class="location">場所：<%= @post.location %></div>
  <div class="image">画像：<%= @post.image %></div>
  <span class="name">
    <a href="/users/<%= @post.user.id %>">
      <span>投稿者：</span><%= @post.user.name %>
    </a>  
  </span>

<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>


  <div class="container">
    <% if current_user %>
      <%= form_with(model: [@post, @kuchikomi], local: true, id: "new_kuchikomi") do |form| %>
        <%= form.text_area :text, placeholder: "投稿する", rows: "2", class: "textbox" %>
        <%= form.submit "SEND", class: "form__submit" %>
      <% end %>
    <% else %>
      <strong><p>※※※ 口コミの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>

    <div class="kuchikomis">
      <h4>＜口コミ一覧＞</h4>
      <% if @kuchikomis %>
        <% @kuchikomis.each do |kuchikomi| %>
          <p>
            <strong><%= link_to kuchikomi.user.name, "/users/#{kuchikomi.user_id}" %>：</strong>
            <%= kuchikomi.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>